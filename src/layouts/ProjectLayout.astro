---
// import Nav from "../components/Navbar.svelte";
import Footer from "../components/global/Footer.astro";
import ScrollIndicator from "../components/global/ScrollIndicator.astro";
import FloatingEmail from "../components/global/FloatingEmail.astro";
import "../styles/global.css";
import Navbar from "../components/global/Navbar.astro";
import MainHead from "../components/global/MainHead.astro";
// 

interface Props {
	title?: string | undefined;
	description?: string | undefined;
}

const { title, description } = Astro.props;

---

<html lang="en">
  <head>
    
    <MainHead title={title} description={description} />
  </head>

  <body>
    <Navbar />
    <slot />
    <Footer />
    <ScrollIndicator />
    <FloatingEmail />
  </body>
</html>
